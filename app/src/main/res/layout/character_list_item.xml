<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/actor_photo_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/actor_photo"
            android:layout_width="120dp"
            android:layout_height="180dp"
            tools:ignore="MissingConstraints"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/character_species"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_name"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/character_Gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_species"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/character_House"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_Gender"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/character_DateOfBirth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_House"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/character_Ancestry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_DateOfBirth"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/character_EyeColour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_Ancestry"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/character_HairColour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_EyeColour"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/character_Patronus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actor_photo_container"
        app:layout_constraintTop_toBottomOf="@+id/character_HairColour"
        tools:ignore="MissingConstraints"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>